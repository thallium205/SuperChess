<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="electionMenu" controller = "russell.john.ElectionController">        
        <layer id="layer" backgroundColor="#FFFFFF00" childLayout="vertical">            
            <panel id="QueenPanel" height="25%" width="25%" align="center" valign="top" backgroundColor="#f60f" childLayout="center" visibleToMouse="false">
                <text id="startText" font="aurulent-sans-16.fnt" color="#000f" text="Queen" align="center" valign="center" />
                    <interact onClick="getQueen()"/>
            </panel> 
            
            <panel id="BishopPanel" height="25%" width="25%" align="center" valign="top" backgroundColor="#f60f" childLayout="center" visibleToMouse="false">
                <text id="startText" font="aurulent-sans-16.fnt" color="#000f" text="Bishop" align="center" valign="center" />
                    <interact onClick="getBishop()"/>
            </panel> 
            
            <panel id="KnightPanel" height="25%" width="25%" align="center" valign="top" backgroundColor="#f60f" childLayout="center" visibleToMouse="false">
                <text id="startText" font="aurulent-sans-16.fnt" color="#000f" text="Knight" align="center" valign="center" />
                    <interact onClick="getKnight()"/>
            </panel> 
            
            <panel id="RookPanel" height="25%" width="25%" align="center" valign="top" backgroundColor="#f60f" childLayout="center" visibleToMouse="false">
                <text id="startText" font="aurulent-sans-16.fnt" color="#000f" text="Rook" align="center" valign="center" />
                    <interact onClick="getRoock()"/>
            </panel> 
            <!---
            <panel id="restartGame" height="25%" width="25%" align="center" valign="top" backgroundColor="#f40f" childLayout="center" visibleToMouse="true">
                <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="Restart Game" align="center" valign="center" />
                    <interact onClick="newGame()"/>
            </panel>  
            --> 
            
        </layer>   
        
    </screen>
</nifty>
